<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team19.spacetrail"
    android:versionCode="2"
    android:versionName="Version 1.1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/spaceship_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameScreenActivity"
            android:label="@string/title_activity_game_screen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GameInfoActivity"
            android:label="@string/title_activity_game_info"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".PlanetActivity"
            android:label="@string/title_activity_planet"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ExitActivity"
            android:label="@string/title_activity_exit"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".AsteroidActivity"
            android:label="@string/title_activity_asteroid"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".BarterActivity"
            android:label="@string/title_activity_barter"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
