<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="30dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team19.spacetrail.PlanetActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="181dp"
        android:layout_height="205dp"
        android:id="@+id/gridLayout"
        android:layout_row="2"
        android:layout_column="2"
        android:columnCount="3"
        android:minWidth="@dimen/loadGame_ColSize"
        android:rowCount="5"
        android:layout_below="@+id/textView13"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resources_fuel"
            android:id="@+id/textView14"
            android:layout_row="0"
            android:layout_column="0"
            android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resources_food"
            android:id="@+id/textView15"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resources_EngPrts"
            android:id="@+id/textView16"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resources_AlumPrts"
            android:id="@+id/textView17"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resources_SprWings"
            android:id="@+id/textView18"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView19"
            android:layout_row="0"
            android:layout_column="1"
            android:minWidth="@dimen/loadGame_SubMenu_ColSize"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView20"
            android:layout_row="1"
            android:layout_column="1"
            android:minWidth="@dimen/loadGame_SubMenu_ColSize"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView21"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView22"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView23"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mars"
        android:src="@drawable/mars"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to"
        android:id="@+id/textView12"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/mars"
        android:layout_toStartOf="@+id/mars"
        android:layout_marginRight="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/loadGame_ResourceMenu"
        android:id="@+id/textView13"
        android:layout_toStartOf="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/money"
        android:textStyle="bold"
        android:id="@+id/textView24"
        android:layout_toEndOf="@+id/fuelTextField"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textView25"
        android:layout_toEndOf="@+id/textView24"
        android:text="$$$$$"
        android:gravity="center_vertical|center_horizontal|left"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_alignTop="@+id/textView24"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_alignLeft="@+id/ResourceSpinner"
        android:layout_alignStart="@+id/ResourceSpinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ResourceSpinner"
        android:layout_toStartOf="@+id/mars"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/gridLayout"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy"
        android:id="@+id/button"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/ResourceSpinner"
        android:layout_alignEnd="@+id/ResourceSpinner" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Head to Next Planet!"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/ResourceSpinner"
        android:layout_toEndOf="@+id/ResourceSpinner"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mercury"
        android:id="@+id/textView26"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textSize="30sp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/textView12" />

</RelativeLayout>
