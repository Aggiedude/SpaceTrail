<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="team19.spacetrail.GameInfoActivity"
    android:tag="load">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadGameMenu"
        android:id="@+id/loadGameMenu"
        android:minHeight="25dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/gameInformation"
        android:columnCount="3"
        android:minWidth="@dimen/loadGame_ColSize"
        android:rowCount="3"
        android:layout_below="@+id/loadGameMenu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadGame_PeopleMenu"
            android:id="@+id/peopleMenu"
            android:layout_row="0"
            android:layout_column="0"
            android:minWidth="@dimen/loadGame_ColSize"
            android:minHeight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadGame_ShipMenu"
            android:id="@+id/shipMenu"
            android:layout_row="0"
            android:layout_column="1"
            android:minWidth="@dimen/loadGame_ColSize"
            android:minHeight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadGame_ResourceMenu"
            android:id="@+id/resourceMenu"
            android:layout_row="0"
            android:layout_column="2"
            android:minWidth="@dimen/loadGame_ColSize"
            android:minHeight="25dp" />

        <GridLayout
            android:layout_width="@dimen/loadGame_ColSize"
            android:layout_height="fill_parent"
            android:id="@+id/peopleInformation"
            android:layout_row="2"
            android:layout_column="0"
            android:columnCount="3"
            android:minWidth="@dimen/loadGame_ColSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Captain_Name"
                android:id="@+id/captainName"
                android:layout_row="0"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capt Info"
                android:id="@+id/captainInfo"
                android:layout_row="0"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/People_Name1"
                android:id="@+id/peopleName1"
                android:layout_row="1"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name1 Info"
                android:id="@+id/peopleNameInfo1"
                android:layout_row="1"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/People_Name2"
                android:id="@+id/peopleName2"
                android:layout_row="2"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name2 Info"
                android:id="@+id/peopleNameInfo2"
                android:layout_row="2"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/People_Name3"
                android:id="@+id/peopleName3"
                android:layout_row="3"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name3 Info"
                android:id="@+id/peopleNameInfo3"
                android:layout_row="3"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/People_Name4"
                android:id="@+id/peopleName4"
                android:layout_row="4"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name4 Info"
                android:id="@+id/peopleNameInfo4"
                android:layout_row="4"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                android:maxWidth="@dimen/loadGame_SubMenu_ColSize"
                android:paddingLeft="3dp" />
        </GridLayout>

        <GridLayout
            android:layout_width="@dimen/loadGame_ColSize"
            android:layout_height="fill_parent"
            android:id="@+id/shipInformation"
            android:layout_row="2"
            android:layout_column="1"
            android:columnCount="3"
            android:minWidth="@dimen/loadGame_ColSize" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ShipParts_Engine"
                android:id="@+id/shipParts_Engine"
                android:layout_row="0"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:id="@+id/engineHealth"
                android:layout_row="0"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ShipParts_Living_Bay"
                android:id="@+id/shipParts_Living_bay"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ShipParts_Hull"
                android:id="@+id/shipParts_Hull"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:id="@+id/livingBayHealth"
                android:layout_row="1"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:id="@+id/hullHealth"
                android:layout_row="2"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ShipParts_Wing"
                android:id="@+id/shipParts_Wing"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:id="@+id/wingHealth"
                android:layout_row="3"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pace"
                android:id="@+id/pace"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paceValue"
                android:layout_row="4"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

        </GridLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_row="2"
            android:layout_column="2"
            android:fillViewport="false"
            android:id="@+id/resourceScroll">

                <GridLayout
                    android:layout_width="181dp"
                    android:layout_height="132dp"
                    android:id="@+id/resourceInformation"
                    android:columnCount="2"
                    android:minWidth="@dimen/loadGame_ColSize"
                    android:rowCount="9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Money"
                        android:id="@+id/resourcesMoney"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_fuel"
                        android:id="@+id/resourcesFuel"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_food"
                        android:id="@+id/resourcesFood"
                        android:layout_row="2"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_AlumPrts"
                        android:id="@+id/resourcesAluminum"
                        android:layout_row="3"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_EngPrts"
                        android:id="@+id/resourcesEngParts"
                        android:layout_row="4"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_SprWings"
                        android:id="@+id/resourcesSprWngs"
                        android:layout_row="5"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Resources_SprLivingBays"
                        android:id="@+id/resourcesLivingBay"
                        android:layout_row="6"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/resourceCompound"
                        android:layout_row="7"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/weakness"
                        android:text="@string/weakness"
                        android:layout_row="8"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moneyVariable"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fuelVariable"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/foodVariable"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aluminumVariable"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/engineVariable"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wingVariable"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/livingBayVariable"
                        android:layout_row="6"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/compoundVariable"
                        android:layout_row="7"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/weaknessVariable"
                        android:layout_row="8"
                        android:layout_column="1"
                        android:layout_marginLeft="10dp"
                        android:minWidth="@dimen/loadGame_SubMenu_ColSize" />
                </GridLayout>
        </ScrollView>
    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headToSpace"
        android:id="@+id/loadGameButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="gameScreen" />

</RelativeLayout>

