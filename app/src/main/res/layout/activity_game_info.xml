    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="team19.spacetrail.GameInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadGameMenu"
            android:id="@+id/loadGameMenu"
            android:minHeight="25dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/gameInformation"
            android:columnCount="3"
            android:minWidth="@dimen/loadGame_ColSize"
            android:rowCount="3"
            android:layout_below="@+id/loadGameMenu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loadGame_PeopleMenu"
                android:id="@+id/peopleMenu"
                android:layout_row="0"
                android:layout_column="0"
                android:minWidth="@dimen/loadGame_ColSize"
                android:minHeight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loadGame_ShipMenu"
                android:id="@+id/shipMenu"
                android:layout_row="0"
                android:layout_column="1"
                android:minWidth="@dimen/loadGame_ColSize"
                android:minHeight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loadGame_ResourceMenu"
                android:id="@+id/resourceMenu"
                android:layout_row="0"
                android:layout_column="2"
                android:minWidth="@dimen/loadGame_ColSize"
                android:minHeight="25dp" />

            <GridLayout
                android:layout_width="@dimen/loadGame_ColSize"
                android:layout_height="fill_parent"
                android:id="@+id/peopleInformation"
                android:layout_row="2"
                android:layout_column="0"
                android:columnCount="3"
                android:minWidth="@dimen/loadGame_ColSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loadGame_People_Name1"
                    android:id="@+id/person1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loadGame_People_Info1"
                    android:id="@+id/person1_info"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />
            </GridLayout>

            <GridLayout
                android:layout_width="@dimen/loadGame_ColSize"
                android:layout_height="fill_parent"
                android:id="@+id/shipInformation"
                android:layout_row="2"
                android:layout_column="1"
                android:columnCount="3"
                android:minWidth="@dimen/loadGame_ColSize" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShipParts_Engine"
                    android:id="@+id/shipParts_Engine"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:id="@+id/tempValue1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShipParts_Environment"
                    android:id="@+id/shipParts_Env"
                    android:layout_row="1"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ShipParts_Navigation"
                    android:id="@+id/shipParts_Nav"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:id="@+id/tempValue2"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:id="@+id/tempValue3"
                    android:layout_row="2"
                    android:layout_column="1" />

            </GridLayout>

            <GridLayout
                android:layout_width="181dp"
                android:layout_height="132dp"
                android:id="@+id/resourceInformation"
                android:layout_row="2"
                android:layout_column="2"
                android:columnCount="3"
                android:minWidth="@dimen/loadGame_ColSize"
                android:rowCount="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Resources_fuel"
                    android:id="@+id/resourcesFuel"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Resources_food"
                    android:id="@+id/resourcesFood"
                    android:layout_row="1"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Resources_EngPrts"
                    android:id="@+id/resourcesEngPrts"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Resources_AlumPrts"
                    android:id="@+id/resourcesAlumPrts"
                    android:layout_row="3"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Resources_SprWings"
                    android:id="@+id/resourcesSprWngs"
                    android:layout_row="4"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:id="@+id/tempValue4"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:id="@+id/tempValue5"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:minWidth="@dimen/loadGame_SubMenu_ColSize"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tempValue6"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tempValue7"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:id="@+id/tempValue8"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp" />
            </GridLayout>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/MenuBackInfo"
            android:id="@+id/textView13"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asteroid_mine"
            android:id="@+id/mineButton"
            android:layout_below="@+id/gameInformation"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_marginTop="20dp"
            android:onClick="mineAsteroids" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changePaceSpinner"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13"
            android:layout_toRightOf="@+id/mineButton"
            android:layout_marginLeft="200dp"
            android:layout_alignBottom="@+id/mineButton"
            android:layout_marginBottom="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/changePace"
            android:id="@+id/button"
            android:layout_alignLeft="@+id/changePaceSpinner"
            android:layout_alignStart="@+id/changePaceSpinner"
            android:layout_above="@+id/textView13"
            android:layout_marginBottom="20dp"
            android:onClick="changePace" />

    </RelativeLayout>

